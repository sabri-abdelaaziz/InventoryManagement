<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MySpashScreen" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:duration">500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/monlogo</item>
        <item name="postSplashScreenTheme">@style/Theme.InventoryManagement</item>
    </style>
    <style name="Theme.InventoryManagement" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="windowActionBar">false</item> <!-- Removes the Action Bar -->
        <item name="windowNoTitle">true</item> <!-- Removes the Title -->
    </style>
</resources>